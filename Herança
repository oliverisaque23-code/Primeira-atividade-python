class publicacao:
   def __init__(self, titulo):
        self.titulo = titulo
        self.__esta_disponivel = True

   def exibir_detalhes(self):
        disponibilidade = "Disponível" if self.__esta_disponivel else "Insdiponivel"
        return f"Título: {self.titulo} | Status: {disponibilidade}"

   def emprestar(self):
        if self.__esta_disponivel:
            self.__esta_disponivel = False
            return f"'{self.titulo}' foi emprestado."
        return f"'{self.titulo}' já está emprestado."


class Livro(publicacao):
    def __init__(self, titulo, autor, ano):
        super().__init__(titulo)
        self.autor = autor
        self.ano = ano

    def exibir_detalhes(self):
        detalhes_pai = super().exibir_detalhes()
        return f"{detalhes_pai} | Autor: {self.autor} | Ano: {self.ano}"


class Revista(publicacao):
    def __init__(self, titulo, editora, numero_edicao):
        super().__init__(titulo)
        self.editora = editora
        self.numero_edicao = numero_edicao

    def exibir_detalhes(self):
        detalhes_pai = super().exibir_detalhes()
        return f"{detalhes_pai} | Editora: {self.editora} | Edição: {self.numero_edicao}"


livro1 = Livro("Clean code", "Robert C. Martin", 2008)
revista1 = Revista("Wired", "Condo Nato", 450)

print(livro1.exibir_detalhes())
print(revista1.exibir_detalhes())

print(livro1.emprestar())
print(livro1.exibir_detalhes())

